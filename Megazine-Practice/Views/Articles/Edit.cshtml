@model Megazine_Practice.ViewModel.ArticlesViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<form asp-action="Edit" method="post">

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <div style="background-color:#2BA9AF;">
                    <h1 class="update-header">Update Article Data</h1>
                    <input type="hidden" asp-for="Articles_Id" />
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Title)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Title" class="form-control" />
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Description)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.EmployeeViewModel.FullName)
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownListFor(x=> x.Employee_Id, (SelectList)ViewBag.ArticlesEmployee, "Select Employee", new { @class = "form-control required"})
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.CreatedDate)
                    </div>
                    <div class="col-md-9">
                        @*@Html.DisplayFor(model=>model.CreatedAt)*@
                        <input asp-for="CreatedDate" class="form-control" />
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-2">
                        <input type="submit" value="UPDATE" asp-action="Edit" class="btn btn-primary" />
                    </div>
                    <div class="col-md-10">
                        <a asp-action="Index" asp-controller="Articles" class="btn btn-danger">BACK TO ADMIN</a>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
</form>

