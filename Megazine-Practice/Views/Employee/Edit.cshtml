@model Megazine_Practice.ViewModel.EmployeeViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<form asp-action="Edit" method="post">

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <div style="background-color:#2BA9AF;">
                    <h1 class="update-header">Update Employee Data</h1>
                    <input type="hidden" asp-for="Employee_Id" />
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.First_name)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="First_name" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Last_name)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Last_name" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Address)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Address" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Contact_1)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Contact_1" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Contact_2)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Contact_2" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Martial_Status)
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownList("Marital_status", Html.GetEnumSelectList<Megazine_Practice.Enum.MartialStatusEnum>(), "Select Marital Status", new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Gender)
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownList("Marital_status", Html.GetEnumSelectList<Megazine_Practice.Enum.GenderEnum>(), "Select Gender", new { @class = "form-control" })
                    </div>
                </div>

                 <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Joining_Date)
                    </div>
                    <div class="col-md-9">
                        <input type="date" asp-for="Joining_Date" class="form-control" />
                    </div>
                </div>

                 <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Email)
                    </div>
                    <div class="col-md-9">
                        <input type="email" asp-for="Email" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Employee_Image)
                    </div>
                    <div class="col-md-9">
                        <input type="file" asp-for="File" class="form-control" />
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayNameFor(model=>Model.Description)
                    </div>
                    <div class="col-md-9">
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>
             

                <div class="row mt-4">
                    <div class="col-md-2">
                        <input type="submit" value="UPDATE" asp-action="Edit" class="btn btn-primary" />
                    </div>
                    <div class="col-md-10">
                        <a asp-action="Index" asp-controller="Employee" class="btn btn-danger">BACK TO ADMIN</a>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
</form>


