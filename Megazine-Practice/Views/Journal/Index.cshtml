

@model Megazine_Practice.ViewModel.JournalIndexVmcs
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}



<div class="article-list">
    <div class="container mt-5">
        <div class="row">

            <div class="col-md-10">
                <h1 class="title-head">List of Journal</h1>
            </div>
            <div class="col-md-2">
                <div class="row">

                    <div class="col-md-6">
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Create" asp-controller="Journal" class="btn btn-primary">Create</a>
                    </div>
                    <div class="col-md-2">
                    </div>
                </div>

            </div>
        </div>

        <div class="row">


            <hr />
            <div class="col-md-12  table-data mt-3">

                <table class="table table-bordered">
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Employee FullName</th>
                        <th>Image</th>
                        <th>Created At</th>
                        <th>Action</th>

                    </tr>
                    @{int i = 1; }
                    @foreach (var item in Model.JournalPagedList)
                    {
                        if (item.Journal_Id != 0)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.EmployeeViewModels.FullName</td>
                                <td><img src="~/Images/@item.JournalImage" style="height:50px;"></td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Journal" asp-route-id="@item.Journal_Id"> <i class="fa-solid fa-pen-to-square"></i></a>
                                    <a asp-action="Delete" asp-controller="Journal" asp-route-id="@item.Journal_Id"> <i class="fa-sharp fa-solid fa-trash"></i></a>


                                </td>
                            </tr>
                        }
                    }


                </table>

            </div>

        </div>
    </div>
</div>

